{
  "Storage": {
    "type": "object",
    "title": "Storage",
    "description": "Storage Solutions",
    "required": ["availability", "region"],
    "properties": {
      "availability": {
        "title": "Storage Redundancy",
        "type": "string",
        "enum": ["normal", "reduced"],
        "default": "normal"
      },
      "region": {
        "title": "Region",
        "type": "string",
        "enum": [
          "us-standard",
          "us-west-1",
          "us-west-2",
          "eu",
          "ap-northeast-1",
          "ap-southeast-1",
          "ap-southeast-2"
        ],
        "default": "us-standard"
      }
    }
  }
}
